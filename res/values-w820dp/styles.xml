<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   <style name="nav_drawer_textView_style">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="nav_drawer_textView_Header_style">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/text_border_header</item>
    </style>

    <style name="nav_drawer_linearLayout_style">
        <item name="android:background">@drawable/text_border</item>
         <item name="android:paddingLeft">10dp</item>
         <item name="android:orientation">horizontal</item>
    </style>
     <style name="patientProfileEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
<style name="productStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="save_productStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
     <style name="cart_productStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="grid_style">
        <item name="android:columnWidth">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:numColumns">4</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">5dp</item>
    </style>
</resources>