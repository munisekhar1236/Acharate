<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mailLL"
    android:layout_width="@dimen/product_item_width"
    android:layout_height="@dimen/product_item_height"
    android:background="@drawable/product_item_border"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:background="#FFFFFF"
        android:orientation="vertical">

       <LinearLayout 
           android:layout_height="0dp"
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:orientation="horizontal">
           <ImageView 
               android:id="@+id/image1"
               android:layout_height="@dimen/home_grid_item_image_height"
               android:layout_width="@dimen/home_grid_item_image_width"
              />
           	
           <ImageView 
               android:id="@+id/image2"
               android:layout_height="@dimen/home_grid_item_image_height"
               android:layout_width="@dimen/home_grid_item_image_width"
               />
       </LinearLayout>
        <LinearLayout 
           android:layout_height="0dp"
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:orientation="horizontal">
           <ImageView 
               android:id="@+id/image3"
               android:layout_height="@dimen/home_grid_item_image_height"
               android:layout_width="@dimen/home_grid_item_image_width"
               />
           	
           <ImageView 
               android:id="@+id/image4"
               android:layout_height="@dimen/home_grid_item_image_height"
               android:layout_width="@dimen/home_grid_item_image_width"
              />
       </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B22222" />

    <TextView
        android:id="@+id/catogiryName"
        style="@style/productStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#FFFFFF"
        android:gravity="center"
        android:singleLine="true"
        android:text="Kitchen" />

</LinearLayout>